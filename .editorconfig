# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.tf]
indent_size = 2

[*.tfvars]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.sh]
indent_size = 2

[*.ps1]
indent_size = 4
end_of_line = crlf

[Makefile]
indent_style = tab
